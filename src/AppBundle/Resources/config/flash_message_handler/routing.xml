<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="flash_message_handler.index" path="/">
        <default key="_controller">AppBundle:FlashMessageHandler:index</default>
    </route>

    <route id="flash_message_handler.flash" path="/flash">
        <default key="_controller">AppBundle:FlashMessageHandler:flash</default>
    </route>

</routes>
